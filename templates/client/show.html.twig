{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ client.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ client.lastname }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ client.surname }}</td>
            </tr>
            <tr>
                <th>Passport</th>
                <td>{{ client.passport }}</td>
            </tr>
            <tr>
                <th>Issued</th>
                <td>{{ client.issued ? client.issued|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Expiry</th>
                <td>{{ client.expiry ? client.expiry|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ client.nationality }}</td>
            </tr>
            <tr>
                <th>Organisation</th>
                <td>{{ client.organisation }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('client_index') }}">back to list</a>

    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
